# Environment Configuration Example
# Copy this file to .env and modify the values for your environment

# Security Settings
DEBUG=True
SECRET_KEY=your-secret-key-here-minimum-50-characters-long-for-production
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration
# For SQLite (development)
# DATABASE_URL=sqlite:///db.sqlite3

# For MySQL (production)
DB_NAME=easy_document
DB_USER=your_database_user
DB_PASSWORD=your_database_password
DB_HOST=localhost
DB_PORT=3306

# CORS Settings (for production, specify exact domains)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# API Rate Limiting
THROTTLE_ANON_RATE=100/hour
THROTTLE_USER_RATE=1000/hour

# File Upload Settings
FILE_UPLOAD_MAX_MEMORY_SIZE=52428800  # 50MB
DATA_UPLOAD_MAX_MEMORY_SIZE=52428800  # 50MB

# Logging Level
LOG_LEVEL=INFO

# External Service Settings (if needed)
# YOUTUBE_API_KEY=your_youtube_api_key_here
# STORAGE_BACKEND=local  # or 's3', 'azure', etc.