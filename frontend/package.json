{
  "name": "easy-document-frontend",
  "version": "2.1.0",
  "description": "Easy Document - Modern full-stack document processing platform with React frontend. Features PDF/Word/Image compression, conversion, QR tools, watermarking, YouTube conversion, and security features.",
  "author": "GlenFerdinza <asyadda05@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Glenferdinza/Easy_Document.git"
  },
  "keywords": [
    "document-processing",
    "pdf-compression",
    "image-processing",
    "file-conversion",
    "react",
    "django",
    "document-tools",
    "word-to-pdf",
    "qr-generator",
    "watermark",
    "youtube-converter",
    "security-center",
    "full-stack"
  ],
  "private": false,
  "dependencies": {
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "aos": "^2.3.4",
    "axios": "^1.3.0",
    "lucide-react": "^0.263.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-dropzone": "^14.2.3",
    "react-router-dom": "^6.8.0",
    "react-scripts": "5.0.1",
    "react-toastify": "^9.1.1",
    "recharts": "^3.1.2"
  },
  "main": "public/electron.js",
  "homepage": "./",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron": "electron .",
    "electron-dev": "concurrently \"npm start\" \"wait-on http://localhost:3000 && electron .\"",
    "electron-standalone": "electron public/electron-standalone.js",
    "dist": "npm run build && electron-builder",
    "dist-standalone": "npm run build && electron-builder --config.main=public/electron-standalone.js",
    "pack": "npm run build && electron-builder --dir"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "proxy": "http://localhost:8000",
  "build": {
    "appId": "com.glenferdinza.easydocument",
    "productName": "Easy Document",
    "directories": {
      "buildResources": "public",
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "public/electron.js",
      "public/preload.js",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "build/favicon.svg"
    },
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "mac": {
      "target": "dmg",
      "icon": "build/favicon.svg"
    },
    "linux": {
      "target": "AppImage",
      "icon": "build/favicon.svg"
    }
  },
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "concurrently": "^8.2.2",
    "electron": "^38.1.0",
    "electron-builder": "^26.0.12",
    "electron-is-dev": "^3.0.1",
    "find-process": "^2.0.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.13",
    "wait-on": "^8.0.5"
  }
}
